
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/houtai.cshtml";
}
  @using GreenMall.Models
@{ 
    Recordsinfo re = ViewBag.re;
}
    <div class="container">
        <ul class="breadcrumb">
            <li class="active">供货商管理</li>
        </ul>
        <form action="/Houtai/Update" method="post" id="form1">
            <input type="hidden" name="Merchantsid" value="@re.Merchantsid" />
            <div class="row">
                <div class="col-lg-6">
                    <p class="form-group">
                        <label>姓名：</label>
                        <input type="text" name="MerchantsName" class="form-control" value="@re.MerchantsName"/>
                    </p>
                </div>
                <div class="col-lg-6">
                    <p class="form-group">
                        <label>电话：</label>
                        <input type="text" name="MerchantsPhon" class="form-control" value="@re.MerchantsPhon"/>
                    </p>
                </div>
            </div>

            <p class="form-group" style="margin-top:3em">
                <label>品种：</label><br />
                <textarea rows="3" cols="200" name="MerPlantingShoping" >
                @re.MerPlantingShoping
                 </textarea>
            </p>
            <p class="form-group">
                <label>类型：</label>
                <select name="MerchantsType" class="form-control">
                    <option>==请选择类型==</option>
                    @if (re.MerchantsType == 1)
                    {
                        <option value="1" selected="selected">大种植户</option>
                        <option value="2">小种植户</option>
                    }
                    else
                    {
                        <option value="1" >大种植户</option>
                        <option value="2" selected="selected">小种植户</option>
                    }


                </select>
            </p>
            <p class="form-group">
               <input type="submit" value="保存" class="btn btn-success"/>
               <a href="javascript:history.back(-1)" class="btn btn-default">返回</a>
            </p>
        </form>
    </div>
    

