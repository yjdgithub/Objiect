<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container navbar-fixed-top" >
        <div class="container" style="background-color:white">
            <div class="navbar-header">
                <img src="~/Content/Images/动态logn.gif" style="height:50px;" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a style="font-size:2em;">绿化商城</a></li>
                </ul>

            </div>

        </div>
        <div class="row " style="height:39px;background-color:#96b97d;">
            <div class="container">

                <div class="navbar-collapse ">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("首页", "Index", "Home")</li>
                        <li>@Html.ActionLink("产品浏览", "Index", "liulaninfo")</li>
                        <li>@Html.ActionLink("个人信息", "Contact", "Home")</li>
                        <li>@Html.ActionLink("关于我们", "Contact", "Home")</li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
    

    <div class="navbar body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
